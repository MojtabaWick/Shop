@page
@model Shop.Presentation.RazorPages.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "داشبورد مدیریت";
}

<h1>داشبورد مدیریت</h1>
<hr />

<div class="row">
    <!-- محتوای اصلی سمت چپ (می‌تونید محتوای دلخواه اضافه کنید، مثلاً آمار یا خوش‌آمدگویی) -->
    <div class="col-md-9">
        <p>خوش آمدید به پنل مدیریت. از منوی سمت راست گزینه مورد نظر را انتخاب کنید.</p>
        <!-- اینجا می‌تونید محتوای بیشتری مثل جدول آمار یا چیزهای دیگه اضافه کنید -->
    </div>

    <!-- منوی عمودی سمت راست -->
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5>منوی مدیریت</h5>
            </div>
            <div class="card-body">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Users/Index">مدیریت کاربران</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Products/Index">مدیریت محصولات</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Categories/Index">مدیریت دسته‌بندی‌ها</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Orders/Index">مدیریت سفارشات</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  <!-- اگر نیاز به validation دارید، نگه دارید -->
}