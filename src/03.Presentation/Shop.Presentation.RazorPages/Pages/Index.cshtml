@page
@model IndexModel
@{
    ViewData["Title"] = "فروشگاه";
}
<h2 class="mb-4 fw-bold">محصولات</h2>

<div class="row g-4">

    <div class="col-md-3 order-md-last">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title fw-bold">دسته‌بندی‌ها</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <a asp-page="./Index" class="text-decoration-none @(Model.SelectedCategoryId == null ? "fw-bold" : "")">همه محصولات</a>
                    </li>
                    @foreach (var category in Model.Categories)
                    {
                        <li class="list-group-item">
                            <a asp-page="./Index" asp-route-categoryId="@category.Id" 
                               class="text-decoration-none @(Model.SelectedCategoryId == category.Id ? "fw-bold" : "")">
                                @category.Name
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <!-- محصولات اصلی -->
    <div class="col-md-9">
        <div class="row g-4">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title" />
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@product.Title</h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold">@product.Price.ToString("N0") تومان</span>
                                <div> <!-- برای گروه کردن دکمه‌ها -->
                                    <form method="post" asp-page-handler="AddToCart" class="d-inline">
                                        <input type="hidden" name="id" value="@product.Id" />
                                        <button class="btn btn-success">خرید</button>
                                    </form>
                                    <a asp-page="/Product" asp-route-id="@product.Id" class="btn btn-info ms-2">جزئیات</a> <!-- دکمه جدید -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>