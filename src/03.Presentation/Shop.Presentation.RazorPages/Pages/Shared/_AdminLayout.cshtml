@using Shop.Presentation.RazorPages.DataBase
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop.Presentation.RazorPages</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* برای اینکه Footer همیشه ته صفحه باشد */
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
            padding-top: 80px; /* فاصله برای Navbar fixed */
        }
    </style>
</head>
<body>
    <!-- Navbar (برای بخش ادمین) -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">MyShop Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Admin/Index">پنل ادمین</a>
                    </li>
                    <!-- می‌توانید لینک‌های دیگر ادمین را اینجا اضافه کنید -->
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item me-3">
                        <span class="nav-link text-white">خوش آمدید،</span>
                    </li>
                    <!-- اگر نیاز به لینک خروج دارید، اضافه کنید -->
                    <li class="nav-item">
                        <form method="post" asp-page="/Account/Logout">
                            <button type="submit" class="btn btn-danger">
                                خروج
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Main content -->
    <main class="container pb-3">
        @RenderBody()
    </main>
    <!-- Footer -->
    <footer class="border-top footer text-muted mt-auto py-3">
        <div class="container">
            &copy; 2025 - Shop.Presentation.RazorPages -
            <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>