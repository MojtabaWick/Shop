@page "{orderId:int}"
@model Shop.Presentation.RazorPages.Pages.PaymentModel

@{
    ViewData["Title"] = "صفحه پرداخت";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" />
    <style>
        body {
            font-family: 'Tahoma', sans-serif;
            background-color: #f8f9fa;
        }
        .payment-info {
            margin-top: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #fff;
        }
        .wallet-balance {
            font-size: 1.2em;
            font-weight: bold;
        }
        .pay-btn {
            margin-top: 20px;
        }
        .error-message {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center my-4">صفحه پرداخت سفارش</h1>

        @if (Model.Order != null)
        {
            <div class="payment-info">
                <p>جمع کل سفارش: @Model.Order.TotalPrice.ToString("N0") تومان</p>
                <p class="wallet-balance">موجودی کیف پول شما: @Model.WalletBalance.ToString("N0") تومان</p>

                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <p class="error-message">@Model.Message</p>
                }

                <form method="post">
                    <input type="hidden" name="orderId" value="@Model.Order.Id" />
                    <button type="submit" class="btn btn-success pay-btn">پرداخت از کیف پول</button>
                </form>
            </div>
        }
        else
        {
            <p class="text-center">سفارش یافت نشد.</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
