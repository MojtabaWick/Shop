@page
@model Shop.Presentation.RazorPages.Pages.CartModel
@{
    ViewData["Title"] = "سبد خرید";
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" />
    <style>
        body {
            font-family: 'Tahoma', sans-serif;
            background-color: #f8f9fa;
        }
        .cart-table {
            margin-top: 20px;
        }
        .cart-item-img {
            width: 80px;
            height: 80px;
            object-fit: cover;
        }
        .quantity-input {
            width: 60px;
            text-align: center;
        }
        .update-btn {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center my-4">سبد خرید شما</h1>
        @if (Model.CartItems == null || Model.CartItems.Count == 0)
        {
            <p class="text-center">سبد خرید شما خالی است.</p>
        }
        else
        {
            <form method="post" asp-page-handler="Update"> 
                <table class="table table-bordered table-hover cart-table">
                    <thead class="table-light">
                        <tr>
                            <th>تصویر</th>
                            <th>عنوان محصول</th>
                            <th>قیمت (تومان)</th>
                            <th>تعداد</th>
                            <th>جمع کل</th>
                            <th>عملیات</th> 
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.CartItems.Count; i++) 
                        {
                            var item = Model.CartItems[i];
                            <tr>
                                <td>
                                    <img src="@item.ProductDto.ImageUrl" alt="@item.ProductDto.Title" class="cart-item-img" />
                                </td>
                                <td>@item.ProductDto.Title</td>
                                <td>@item.ProductDto.Price.ToString("N0")</td>
                                <td>
                                    <input type="hidden" name="updatedItems[@i].Id" value="@item.Id" />
                                    <input type="number" name="updatedItems[@i].Quantity" value="@item.Quantity" min="1" class="form-control quantity-input" />
                                </td>
                                <td>@((item.Quantity * item.ProductDto.Price).ToString("N0"))</td>
                                <td>
                                    <!-- فرم جداگانه برای حذف -->
                                    <a asp-page-handler="Delete" 
                                       asp-route-Id="@item.Id"
                                       class="btn btn-sm btn-outline-danger">
                                        حذف
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <button type="submit" class="btn btn-primary update-btn">به‌روزرسانی سبد خرید</button>
            </form>
            <form method="post" asp-page-handler="CreateOrder">
                <button type="submit" class="btn btn-success update-btn ms-2">ادامه مراحل خرید</button>
            </form>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>